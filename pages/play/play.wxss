/* pages/play/play.wxss */
.box{
  width: 100%;
  height: 100%;
  position: fixed;
  background: black;
}
.box .title{
  width: 100%;
  color: white;
  height: 100rpx;
  font-size: 60rpx;
  font-weight: bold;
  text-align: center;
  position: relative;
  margin-top: 50rpx;
 
}
.bg{
  left:-290rpx;
  width: 180%;
  height: 100%;
  position: absolute;
  background-size: 100%,100%;
  opacity: 0.3; 
  
}
.main{
  width:100%;
  height: 70%;

  position: absolute;
}
.main .item01{
  width:100%;
  height: 70%;
 
  text-align: center;
}
.main .item01 image{
  box-sizing: border-box;
  border:50rpx solid #222222;
  width: 80%;
  height: 71%;
  border-radius: 50%;
  margin-top: 100rpx;
  box-shadow: 0px 0px 10px black;
  animation: box 20s linear infinite;

}
@keyframes box{
  form{
    transform: rotate(0deg);
  }to{
    transform: rotate(360deg);
  }
}
.main .item02 {
  height: 100%;
  width:100%;
}
.main .item02 text{
  display: block;
  color:white;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
}
.btn_box{
  width: 100%;
  height: 150rpx; 
  background: #c20c0c;
  position: absolute;
  bottom: 0;
}
.btn_box image{
  width: 130rpx;
  height:130rpx; 
  margin-left: 95rpx; 
  margin-top: 10rpx;
}
.lyric{
  width: 100%;
  height: 100%;
}
.main .item02  .color{
  color: yellow;
  font-size: 50rpx;
  transition: all 0.5 linear;
}
